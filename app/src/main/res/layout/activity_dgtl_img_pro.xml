<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DIGITAL IMAGE PROCESSING"
            android:textColor="#000000"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:textSize="25dp"
            />

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view3"
                android:layout_margin="5dp"
                android:layout_weight="0.94"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="392dp"
                card_view:cardBackgroundColor="#ffffff"
                card_view:contentPadding="5dp"
                card_view:cardCornerRadius="15dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:src="@drawable/shohrab"
                        app:civ_border_color="@android:color/white"
                        app:civ_border_width="2dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:letterSpacing="0.05"
                        android:text="DR. SOHRAB HOSSAIN SHAIKH"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:letterSpacing="0.05"
                        android:text="EMAIL: soharab.hossain@bml.edu.in"
                        android:autoLink="web|email"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:letterSpacing="0.05"
                        android:text="PHONE: 8376027586"
                        android:autoLink="phone"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="At the end of the course the students should be able to understand the fundamentals behind formation - capturing of images, processing and analyzing digital images. They will be able to understand the concept of image compression and multi-resolution images. They will have an understanding of where digital images are used in real-life applications and they'll be able to apply their knowledge in implementing programs involving digital image processing."
                        android:padding="10dp"
                        android:textColor="@android:color/black"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>


    </LinearLayout>
</ScrollView>